.grid_24
  .state
    %ul.horizontal
      %li.active IDEA
      %li LAKILUONNOS
      %li LAKIESITYS
      %li LAKI
  .idea_author
    %img{ src: "", width: 48, height: 48 }
    %span= @idea.author.name
.idea.grid_24
  .grid_16.alpha
    %h1= @idea.title
    .idea_summary
      = markdown(@idea.summary) if @idea.summary
    .idea_body
      = markdown(@idea.body) if @idea.body

    - if @idea.author == current_citizen
      = link_to I18n.t("ideas.links.edit_idea"), edit_idea_path(@idea)
  .grid_7.prefix_1.omega
    .voting.sans_serif
      %h3 Tehdäänkö tästä laki?
      = link_to "Kyllä", "#", class: "btn jaa-btn"
      = link_to "Ei", "#", class: "btn ei-btn"
    .votes
      %span 88888
      %span ääntä
      %img{ src: "", width: 100, height: 200 }
.expert_opinions
  %h2.grid_24 Asiantuntijalausunnot
  .grid_8
    .expert
      .grid_2.alpha
        %img{ src: "", width: 50, height: 50 }
      .grid_6.omega
        %span.sans_serif.name= @idea.author.name
        %span.sans_serif [ timestamp ]
        %span.sans_serif.title Rattijuopumusrikosten ehkäisyssä &raquo;
  .grid_8
    .expert
      .grid_2.alpha
        %img{ src: "", width: 50, height: 50 }
      .grid_6.omega
        %span.sans_serif.name= @idea.author.name
        %span.sans_serif [ timestamp ]
        %span.sans_serif.title Rattijuopumusrikosten ehkäisyssä &raquo;
  .grid_8
    .expert
      .grid_2.alpha
        %img{ src: "", width: 50, height: 50 }
      .grid_6.omega
        %span.sans_serif.name= @idea.author.name
        %span.sans_serif [ timestamp ]
        %span.sans_serif.title Rattijuopumusrikosten ehkäisyssä &raquo;
  .clear
.idea_comments
  %h2.grid_24 Kommentit
  .grid_24.comment_form
    = render "comments/form", model: @idea
  .grid_16
    .comments
      - @idea.comments && @idea.comments.each do |comment|
        - unless comment.new_record?
          = render "comments/comment", comment: comment
